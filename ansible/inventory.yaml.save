---
linux:  # Группа хостов
  children:  # Обозначение, что будет подгруппа хостов
    all_hosts:
      hosts:
        nginx-balancer:
          ansible_host: "{{ nginx_balancer_ip.public }}"
        nginx-server-1:
          ansible_host: "{{ nginx_server_1_ip.public }}"
        nginx-server-2:
          ansible_host: "{{ nginx_server_2_ip.public }}"
    nginx-balancer:
      hosts:
        nginx-balancer:
          ansible_host: "{{ nginx_balancer_ip.public }}"
    nginx-server:
      hosts:
        nginx-balancer:
          ansible_host: "{{ nginx_balancer_ip.public }}"
        nginx-server-1:
          ansible-host: "{{ nginx_server_1_ip.public }}"
        nginx-server-2:
          ansible_host: "{{ nginx_server_2_ip.public }}"
    nginx-mediawiki:
      hosts:
        nginx-server-1:
          ansible-host: "{{ nginx_server_1_ip.public }}"
        nginx-server-2:
          ansible-host: "{{ nginx_server_2_ip.public }}"
    postgresql:
      hosts:
        postgresql_master:
          ansible_host: "{{ postgresql_master_ip.public }}"
    postgresql_master:
      hosts:
        postgresql_master:
          ansible_host: "{{ postgresql_master_ip.public }}"

  vars:  # Переменные, доступные или используемые для всех подгрупп
    ansible_user: "ubuntu"
    #ansible_password: "qwerty"
    connection_protocol: ssh  # тип подключения
    ansible_become: true  # Становиться ли другим пользователем после подключения
    ansible_become_user: root
    nginx_balancer_ip:
      public: 89.169.128.79
      local: ...
    nginx_server_1_ip:
      public: 130.193.50.241
      local: ...
    nginx_server_2_ip:
      public: 89.169.135.102
      local: ...
    postgresql_master_ip:
      public: 158.160.54.13
      local: ...
